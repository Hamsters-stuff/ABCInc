extends layout

block content
  .row
    .col-sm-10
      h1 Task management
    .col-sm-2
      a(href='/tasks/create')
        button.btn.btn-primary(type='button' style='width: 100%; height: 100%;') Add a task
  br
  table.table.table-bordered
      thead
        tr
          th Task
          th Summary
          th Status
          th
      tbody
      - each task in tasks
        tr
          td !{task.task}
          td !{task.summary}
          td !{task.status}
          td 
            a(href='/tasks/'+task.id+'/edit' style="margin-right: 5px;")
              button.btn.btn-success(type='button') Edit
            a(href='/tasks/'+task.id+'/delete')
              button.btn.btn-danger(type='button') Delete



